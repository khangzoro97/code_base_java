# ============================================
# Spring Boot Backend - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# For Docker Compose: docker-compose will automatically load .env file
# For local development: export variables or use IDE run configuration

# ============================================
# Application Configuration
# ============================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ============================================
# Database Configuration
# ============================================
# PostgreSQL (for production)
DB_NAME=backenddb
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_PORT=5432
DB_URL=jdbc:postgresql://localhost:5432/backenddb
DB_DRIVER=org.postgresql.Driver

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# Hibernate Configuration
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
HIBERNATE_FORMAT_SQL=true
HIBERNATE_USE_SQL_COMMENTS=true
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false

# ============================================
# JWT Authentication Configuration
# ============================================
# IMPORTANT: Generate a secure random secret key for production!
# Use at least 32 characters for HS256 algorithm
# Example: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-must-be-at-least-32-characters-long-for-hs256-algorithm-change-in-production
JWT_EXPIRATION=86400000

# ============================================
# Flyway Database Migrations
# ============================================
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true
FLYWAY_VALIDATE_ON_MIGRATE=true

# ============================================
# SpringDoc OpenAPI (Swagger) Configuration
# ============================================
SWAGGER_ENABLED=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SQL_BINDER=TRACE
LOG_FILE_PATH=/var/log/backend/application.log
INCLUDE_STACKTRACE=never

# ============================================
# Debug Configuration (Docker)
# ============================================
# Enable debug mode for remote debugging
DEBUG_ENABLED=false # Set to true to enable debug on port 5005
DEBUG_PORT=5005 # Debug port (default: 5005)

# ============================================
# Docker Compose Specific
# ============================================
# These are used by docker-compose.yml
# DB_URL will be automatically set to use postgres service name in Docker
# For local development, use localhost instead

